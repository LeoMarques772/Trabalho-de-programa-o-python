def main():
    while True:
        escolha = menu()

        if escolha == "1":
            login()
        elif escolha == "2":
            cadastro()
        elif escolha == "3":
            cursos()
        elif escolha == "4":
            informaçoes_de_segurança()
        elif escolha == "5":
            print("Saindo...")
            break
        else:
            print("Opção invalida. Tente novamente")    



if __name__=="__main__":
    main()       
